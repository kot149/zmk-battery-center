{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zmk-battery-center",
  "version": "0.3.1",
  "identifier": "com.zmk-battery-center.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:ui",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "zmk-battery-center",
        "width": 300,
        "height": 300,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "shadow": false,
        "transparent": true,
        "resizable": false
      }
    ],
    "trayIcon": {
      "id": "tray_icon",
      "iconPath": "icons/32x32.png",
      "tooltip": "zmk-battery-center"
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; font-src 'self'; connect-src 'self' tauri:"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app",
      "msi",
      "nsis",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/icon_template.png"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
